#   
#   ███████╗██╗██╗      ██████╗ 
#   ██╔════╝██║██║     ██╔═══██╗
#   █████╗  ██║██║     ██║   ██║
#   ██╔══╝  ██║██║     ██║   ██║
#   ██║     ██║███████╗╚██████╔╝
#   ╚═╝     ╚═╝╚══════╝ ╚═════╝ 
#   

import sys
import subprocess
import argparse
import os

APPS = {
    "brightness": "~/.firo/core/scripts/brightness-man.sh",
    "audio": "~/.firo/core/scripts/audio-man.sh",
    "power": "~/.firo/core/scripts/power-man.sh",
    "screenshot": "~/.firo/core/scripts/screenshot-man.sh",
    "wallpaper": "~/.firo/core/f_wallpaper.py",
    "launcher": "~/.firo/core/scripts/launcher-man.sh"
}

def expand(path: str):
    return os.path.abspath(os.path.expanduser(path))

def main():
    parser = argparse.ArgumentParser(description="Firo's Hub")
    parser.add_argument("program", help="Name of the program to execute")
    parser.add_argument("args", nargs=argparse.REMAINDER, help="Arguments for the program")

    args = parser.parse_args()

    program_name = args.program
    program_args = args.args

    try:
        program_executable = expand(APPS[program_name])
        subprocess.run([program_executable] + program_args)
    except Exception:
        print(f"Error: '{program_name}' not found or not executable.")

if __name__ == "__main__":
    main()
